{
    "name": "schranz-templating/smarty-adapter",
    "description": "An adapter for the template renderer for smarty template engine.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Schranz\\Templating\\Adapter\\Smarty\\": ""
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "./../../TemplateRenderer",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0",
        "smarty/smarty": "^3.0 || ^4.1",
        "schranz-templating/template-renderer": "^0.1"
    },
    "minimum-stability": "dev"
}
